<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@color/colorGrey">

    <ImageView
        android:id="@+id/imageview_deadline_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@mipmap/ic_profile"
        android:backgroundTint="@color/colorYellow"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/image_content"/>

    <TextView
        android:id="@+id/textview_deadline_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deadline_title"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:textColor="@color/colorGreen"
        android:background="@color/colorYellow"/>

    <TextView
        android:id="@+id/textview_deadline_hours"
        android:text="@string/deadline_hours"
        android:gravity="center"
        android:textColor="@color/colorGreen"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        />

    <SeekBar
        android:id="@+id/seekBar_deadline"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="8dp"
        android:tickMarkTint="@color/colorRed"
        android:progressTint="@color/colorGreen"
        android:backgroundTint="@color/colorYellow"
        android:progress="12"
        android:max="24"
        />

    <Button
        android:id="@+id/button_deadline_pick_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/deadline_set"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:padding="15dp"
        android:textColor="@color/colorYellow"
        android:background="@color/colorGreen"/>


</LinearLayout>