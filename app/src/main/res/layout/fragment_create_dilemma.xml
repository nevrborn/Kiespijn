<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    >

    <Button
        android:id="@+id/button_next_create_dilemma"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_action_next_arrow"
        android:layout_marginBottom="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/text_view_dilemma_title"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="35dp"
                android:background="@color/colorYellow"
                android:hint="@string/title_hint"
                android:padding="10dp"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/colorGreen"
                android:inputType="textCapSentences"/>

            <ImageView
                android:id="@+id/add_context"
                android:layout_width="45dp"
                android:padding="16dp"
                android:layout_height="45dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorYellow"
                android:foreground="@mipmap/ic_info"
                android:contentDescription="@string/image_content"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="45dp"
                android:layout_marginRight="35dp"
                android:background="@color/colorYellow"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/edit_text_option_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="0.5"
                android:background="@color/colorGreen"
                android:gravity="center"
                android:hint="@string/title_hint_1"
                android:padding="8dp"
                android:textColor="@color/colorYellow"
                android:textColorHint="@color/colorYellow"
                android:textStyle="normal|bold"
                android:inputType="textCapSentences"/>

            <EditText
                android:id="@+id/edit_text_option_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="0.5"
                android:background="@color/colorGreen"
                android:gravity="center"
                android:textColor="@color/colorYellow"
                android:hint="@string/title_hint_2"
                android:padding="8dp"
                android:textColorHint="@color/colorYellow"
                android:textStyle="normal|bold"
                android:inputType="textCapSentences"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/image_1_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="0.5"
                android:background="@color/colorGreen"
                android:orientation="vertical"
                android:padding="3dp"
                >

                <ImageView
                    android:id="@+id/image_view_option_1_take_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image_content"
                    android:src="@drawable/ic_action_camera"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_2_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="0.5"
                android:background="@color/colorGreen"
                android:orientation="vertical"
                android:padding="3dp"
                >

                <ImageView
                    android:id="@+id/image_view_option_2_take_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image_content"
                    android:src="@drawable/ic_action_camera"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
