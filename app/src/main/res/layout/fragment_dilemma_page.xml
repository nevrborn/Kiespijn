                <TextView
                    android:id="@+id/textview_add_content_swipe"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:background="@color/colorGreen"
                    android:text="@string/add_content"
                    android:textColor="@color/colorYellow"
                    android:textSize="20sp"
                    android:gravity="center_vertical|center_horizontal"/>

            </LinearLayout>
            <!-- Bottom View End-->

            <!-- Surface View Start -->
            <LinearLayout
                android:padding="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--What you want to show in SurfaceView-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorGreen"
                    android:padding="6dp"
                    >

                    <ImageView
                        android:id="@+id/image_view_second_option_decicision_page"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_content"
                        android:src="@drawable/ic_action_sand_timer"
                        />

                    <TextView
                        android:id="@+id/text_view_second_image_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:background="@color/colorTransparentWhite"
                        android:hint="@string/image_title"
                        android:textAlignment="center"
                        android:textColorHint="@android:color/black"
                        android:textSize="15sp"
                        />

                </RelativeLayout>

            </LinearLayout>
            <!-- Surface View End -->
        </com.daimajia.swipe.SwipeLayout>

