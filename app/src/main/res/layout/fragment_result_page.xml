<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_result_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/black"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bnnvara.kiespijn.ResultPage.ResultActivity">

    <include layout="@layout/dilemma_viewholder"/>

    <LinearLayout
        android:id="@+id/linear_layout_results_sex"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_view_results_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="mannen (18)"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            >

            <TextView
                android:id="@+id/text_view_result_men_left"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:text="75%"
                />

            <SeekBar
                android:id="@+id/seekBar_men_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_weight="0.5"
                android:layoutDirection="rtl"
                android:max="100"
                android:paddingStart="8dp"
                android:progress="75"
                android:progressBackgroundTint="@color/colorGrey"
                android:progressTint="@color/colorRed"
                android:thumbTint="@color/colorRed"
                android:paddingLeft="8dp"/>

            <SeekBar
                android:id="@+id/seekBar_men_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layoutDirection="ltr"
                android:max="100"
                android:paddingStart="8dp"
                android:progress="25"
                android:progressBackgroundTint="@color/colorGrey"
                android:progressTint="@color/colorLightGreen"
                android:thumbTint="@color/colorLightGreen"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/text_view_result_men_right"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textAlignment="gravity"
                android:text="25%"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_results_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Vrouwen (26)"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            >

            <TextView
                android:id="@+id/text_view_result_women_left"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:text="75%"
                />

            <SeekBar
                android:id="@+id/seekBar_women_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_weight="0.5"
                android:layoutDirection="rtl"
                android:max="100"
                android:paddingStart="8dp"
                android:progress="55"
                android:progressBackgroundTint="@color/colorGrey"
                android:progressTint="@color/colorRed"
                android:thumbTint="@color/colorRed"
                android:paddingLeft="8dp"/>

            <SeekBar
                android:id="@+id/seekBar_women_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layoutDirection="ltr"
                android:max="100"
                android:paddingStart="8dp"
                android:progress="45"
                android:progressBackgroundTint="@color/colorGrey"
                android:progressTint="@color/colorLightGreen"
                android:thumbTint="@color/colorLightGreen"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/text_view_result_women_right"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textAlignment="gravity"
                android:text="25%"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
