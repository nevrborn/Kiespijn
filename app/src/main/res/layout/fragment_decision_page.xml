<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    android:padding="32dp"
    >

    <LinearLayout
        android:id="@+id/linear_layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/image_view_user_photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/colorRed"
            />

        <LinearLayout
            android:id="@+id/linear_layout_user_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:background="@color/colorGreen"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/text_view_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANONIEM"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/text_view_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vrouw | 31 jaar"
                android:textColor="@android:color/white"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_dilemma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/text_view_dilemma_indicator"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/colorYellow"
            android:textAlignment="center"
            android:text="DE KIES"
            android:textColor="@color/colorGreen"
            />

        <TextView
            android:id="@+id/text_view_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorYellow"
            android:layout_marginLeft="16dp"
            android:padding="16dp"
            android:text="Mijn familie wil mijn vader cremeren maar ik wil dat hij begraven wordt, wat moet ik kiezen?"
            android:textColor="@color/colorGreen"
            />

    </LinearLayout>

</LinearLayout>
