<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/dilemma_filter"
            android:textSize="12sp"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/dilemma_filter_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColorLink="@color/colorGreen"
            app:theme="@style/MySwitch"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_no_dilemmas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dilemma_empty"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_content"
            android:src="@drawable/noooo"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen"
            android:padding="3dp"
            >

            <ImageView
                android:id="@+id/image_view_user_photo"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@color/colorRed"
                android:contentDescription="@string/image_content"
                android:src="@drawable/ic_action_user_photo"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_layout_user_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@color/colorGreen"
            android:gravity="center_vertical"
            android:weightSum="1"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/dilemma_username"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/text_view_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/dilemma_user_description"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_friends"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@mipmap/ic_friends"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_dilemma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/text_view_dilemma_indicator"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:background="@color/colorYellow"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/de_kies"
            android:textColor="@color/colorGreen"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@color/colorYellow"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/text_view_dilemma"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:hint="@string/dilemma_main_text"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/colorGreen"
                android:textStyle="normal|bold"/>

            <ImageView
                android:id="@+id/image_view_background_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/ic_info"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:weightSum="1"
        android:layout_marginBottom="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        >

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipeview_first"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="match_parent">
            <!-- Bottom View Start-->
            <LinearLayout
                android:background="#66ddff00"
                android:id="@+id/swipe_bottom_wrapper_first"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <!--What you want to show-->

                <TextView
                    android:id="@+id/textview_next_dilemma_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="GEKOZEN"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="20sp"
                    android:textColor="@color/colorGreen"
                    android:background="@color/colorYellow"/>

            </LinearLayout>
            <!-- Bottom View End-->

            <!-- Surface View Start -->
            <LinearLayout
                android:padding="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--What you want to show in SurfaceView-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorGreen"
                    android:padding="6dp"
                    >

                    <ImageView
                        android:id="@+id/image_view_first_option_decicision_page"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_content"
                        android:src="@drawable/ic_action_sand_timer"
                        />

                    <TextView
                        android:id="@+id/text_view_first_image_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:background="@color/colorTransparentWhite"
                        android:hint="@string/image_title"
                        android:textAlignment="center"
                        android:textColorHint="@android:color/black"
                        android:textSize="15sp"
                        />

                </RelativeLayout>

            </LinearLayout>
            <!-- Surface View End -->
        </com.daimajia.swipe.SwipeLayout>

        <com.daimajia.swipe.SwipeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipeview_second"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <!-- Bottom View Start-->
            <LinearLayout
                android:id="@+id/swipe_bottom_wrapper_second"
                android:padding="10dp"
                android:background="#ffffff"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--What you want to show in SurfaceView-->

                <TextView
                    android:id="@+id/textview_next_dilemma"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:background="@color/colorYellow"
                    android:text="Volgende Dilemma"
                    android:textColor="@color/colorGreen"
                    android:textSize="20sp"
                    android:gravity="center_vertical|center_horizontal"/>

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="0.1"-->
                <!--android:background="@color/colorRed"-->
